<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomSettingView">
        <attr name="BearGroupTitle" format="string"/>
        <attr name="BearShowBottomLine" format="boolean"/>
        <attr name="BearTitle" format="string"/>
        <attr name="BearTitleColor" format="color"/>
        <attr name="BearTitleSize" format="dimension"/>
        <attr name="BearSubtitle" format="string"/>
        <attr name="BearSubtitleColor" format="color"/>
        <attr name="BearSubtitleSize" format="dimension"/>
        <attr name="BearType" format="integer">
            <enum name="normal" value="0"/>
            <enum name="list" value="1"/>
            <enum name="toggle" value="2"/>
        </attr>
        <attr name="BearListStyle" format="integer">
            <enum name="normal" value="0"/>
            <enum name="subtitle" value="1"/>
            <enum name="right" value="2"/>
        </attr>
        <attr name="BearToggleOpen" format="boolean"/>
        <attr name="BearDialogTitle" format="string"/>
        <attr name="BearDialogExtra" format="string"/>
        <attr name="BearDialogKey" format="reference"/>
        <attr name="BearDialogValue" format="reference"/>
        <attr name="BearDialogDefaultKey" format="string"/>
    </declare-styleable>

    <declare-styleable name="SettingSwitchView">
        <attr name="SwitchOnOff" format="string">
            <enum name="off" value="0"/>
            <enum name="on" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="UCIndexView">
        <attr name="pageHeadViewHeight" format="dimension"></attr><!-- UC页面头部的高度 -->
        <attr name="isPageHeadViewFixed" format="boolean"></attr><!-- UC页面头部是否固定，此属性为true的话PageHeadView则会固定在界面顶部不会滑动,此属性为false的话PageHeadView会首先隐藏再慢慢滑出 -->
        <attr name="pageHeadViewLayoutId" format="reference"></attr><!-- UC页面头部内容的布局资源ID -->
        <attr name="pageNavigationViewHeight" format="dimension"></attr><!-- UC网站导航部分的高度 -->
        <attr name="pageNavigationViewLayoutId" format="reference"></attr><!-- UC网站导航部分的内容布局资源ID -->
        <attr name="isContentHeadViewEnable" format="boolean"></attr><!-- UC新闻内容头部的是否启用 -->
        <attr name="contentHeadViewHeight" format="dimension"></attr><!-- UC新闻内容头部的高度 -->
        <attr name="contentHeadViewLayoutId" format="reference"></attr><!-- UC新闻内容头部的内容布局资源ID -->
        <attr name="contentViewLayoutId" format="reference"></attr><!-- UC新闻内容布局资源ID -->
        <attr name="autoSlipDistanceStep" format="dimension"></attr><!-- 手指放开后，视图自动滑动时的每次滑动距离间隔，默认每次滑动20px -->
        <attr name="autoSlipTimeStep" format="integer"></attr><!-- 手指放开后，视图自动滑动时的时间间隔，默认每间隔5毫秒滑动一次 -->
        <attr name="isPullRestoreEnable" format="boolean"></attr><!-- 是否允许下拉时恢复初始化状态 -->
    </declare-styleable>

</resources>